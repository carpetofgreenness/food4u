<h1>My List</h1>

<ul class="list-group">
	<% @foods.each do |food| %>
		<li class="list-group-item">
			<%= form_for move_to_kitchen_path(food.id) do |f| %>
				<%= food.name %> |
	      		<!-- <%= link_to food, method: :delete do %><i class='fa fa-trash-o'></i><% end %> | -->
	      		<%= f.label :shelf_life %>
				<%= f.number_field :shelf_life, value: food.shelf_life_days %>

				<%= f.submit "Add to kitchen" %>
			<% end %>
		</li>
	<% end %>
</ul>

<%= form_for @food, :html => { :id => "new_food" } do |f| %>
	<%= f.search_field 'name' %>
	<%= f.hidden_field 'still_tasty_id' %>
	<%= f.hidden_field 'shelf_life' %>
	<%= f.hidden_field 'purchased', value: false %>
<% end %>

<ul class="list-group" id="suggestions">
	
</ul>

<div class="results"></div>

<%= button_to "Go to Kitchen",  "/kitchen" , :method => :get, class: "btn btn-default" %>






